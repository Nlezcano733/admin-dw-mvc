<section class="text-gray-600 body-font overflow-hidden">
  <div class="flex justify-center items-center h-36 md:h-48 xl:h-72 border">
    <img alt="ecommerce" class="w-auto h-full object-cover object-center" src={{picture}}>
  </div>

  <div class="mt-4 lg:mt-8">
    <div class="flex justify-between">
      <h2 class="text-sm title-font text-gray-500 uppercase tracking-widest">{{brand}}</h2>
      <p class="text-sm text-gray-500 uppercase">{{type}} | <span class="normal-case">{{category}}</span></p>
    </div>
    <h1 class="text-gray-900 text-xl lg:text-2xl title-font font-medium my-2 lg:mb-4">{{title}}</h1>


    <p class="w-full max-h-64 overflow-y-auto mb-4">{{description}}</p>


    <div class="w-1/2 flex justify-between">
      <span class="title-font font-medium text-xl text-gray-900">${{price}}</span>
      <span class="font-medium text-lg text-gray-500">Stock: {{stock}}</span>
    </div>

  </div>

</section>